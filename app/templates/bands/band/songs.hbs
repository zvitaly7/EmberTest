<div class="w-1/2">
  <h1 class="bg-indigo-600">Songs</h1>
  {{#if @model.songs.length}}
    <ul>
      {{#each @model.songs as |song|}}
        <li class="mb-2">
          {{song.title}}
          <span class="float-right">
        <StarRating
                @rating={{song.rating}}
                @onUpdate={{fn (mut song.rating)}}
                @myparam={{"Hello boy"}}
        />
      </span>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-center">
      The band has no songs yet.
    </p>
  {{/if}}
</div>
<div class="w-1/3">
  <h1 class="bg-red-400">Albums</h1>
  {{#if @model.albums.length}}
    <ul>
      {{#each @model.albums as |album|}}
        <li class="mb-2">
          {{album.title}}
          {{album.price}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-center">
      The band has no Albums yet.
    </p>
  {{/if}}
</div>

<div>
  {{#if this.showAddSong}}
    <div class="flex justify-end mt-3">
      <button
              type="button"
              class="px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow- lg hover:text-white hover:bg-purple-500 focus:outline-none"
        {{on "click" (set this.showAddSong false)}} >
        Add song
      </button>
    </div>
  {{else}}
    <div class="mt-6 flex justify-end">
      <label>
        <input
                type="text"
                class="text-gray-800 bg-white rounded-md py-2 px-4" placeholder="Title"
                value={{this.title}}
                onchange={{action (mut this.title) value="target.value"}}
        />

      </label>
      <button
              type="button"
              class="ml-4 px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow-lg hover:text-white"
        {{on "click" this.saveSong}}
      >
        Save
      </button>
      <button
              type="button"
              class="ml-2 px-4 p-2 rounded bg-white border border-bg- purple-600 shadow-md text-purple-600 hover:shadow-lg"
        {{on "click" this.cancel}}
      >
        Cancel
      </button>
    </div>
  {{/if}}

</div>
