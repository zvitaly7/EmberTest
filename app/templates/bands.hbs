<div class="w-1/3 px-2">
  <h1 class="flex justify-center bg-yellow-600">Choose your Band</h1>
  <ul class="pl-2 pr-8">
    {{#each @model as |band|}}
      <li class="mb-2 sm:hover:text-indigo-300">
        <LinkTo @route="bands.band.songs" @model={{band.id}}>
        {{band.name}}
        </LinkTo>
      </li>

    {{/each}}
  </ul>
  <LinkTo
          @route="bands.new"
          class="inline-block ml-2 mt-2 p-2 rounded bg-purple-600 shadow-md hover:shadow-lg hover:text-white hover:bg-purple-500 focus:outline- none"
  >
    Add band
  </LinkTo>
</div>
<div class="flex justify-between w-2/3 px-2">
  {{outlet}}
</div>